<span><h1><%= @quiz.name() %></h1><form action='/quiz/<%= @quiz.id() %>/delete' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="delete">
    <button class='btn btn-xs btn-danger'>Delete <%= @quiz.name()%></button>
  </div>
</form>
</span>

<form action='/quiz/<%= @quiz.id() %>/update' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="patch">
    <label for='update_quiz'>Update quiz</label>
    <input id='update_quiz' name='update_quiz' class='form-control' type='text'>
    <button class='btn btn-xs btn-warning'>Update</button>
  </div>
</form>


<% if @quiz.questions().any? %>

<ul>
  <% @quiz.questions.each  do |question| %>
    <li><a href='/question/<%= question.id() %>'><%= question.question() %></a></li>
    <% end %>
</ul>
<% else %>

<p> There are no questions for this quiz. Add questions below. </p>

<% end %>

<form action='/quiz/<%= @quiz.id() %>' method='post'>

  <input id="quiz_id" name="quiz_id" type="hidden" value="<%= @quiz.id() %>">

  <div class='form-group'>
    <label for='question'>Add a Question</label>
    <input id='question' name='question' class='form-control' type='text'>
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>
