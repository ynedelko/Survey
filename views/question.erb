<h1><%= @question.question %></h1>
<form action='/question/<%= @question.id() %>/delete' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="delete">
    <button class='btn btn-xs btn-danger'>Delete</button>
  </div>
</form>

<form action='/question/<%= @question.id() %>/update' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="patch">
    <label for='update_question'>Update question</label>
    <input id='update_question' name='update_question' class='form-control' type='text'>
    <button class='btn btn-xs btn-warning'>Update</button>
  </div>
</form>
